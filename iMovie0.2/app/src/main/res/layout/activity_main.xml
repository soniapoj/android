<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="696dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="35dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/mainText"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:lineSpacingMultiplier="2"
            android:paddingTop="15dp"
            android:text="DISCOVER FILMS FROM EVERYWHERE ON EARTH"
            android:textAlignment="center"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/logo" />

        <Button
            android:id="@+id/watchlistButton3"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#feb236"
            android:drawableLeft="@drawable/watchlist_icon"
            android:onClick="showWatchlist"
            android:text="My Watchlist" />

        <Button
            android:id="@+id/watchlistButton4"
            android:layout_width="398dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#ff7b25"
            android:drawableLeft="@drawable/recommend_icon"
            android:onClick="showRecommended"
            android:text="WHAT SHOULD I WATCH NEXT?" />

        <Button
            android:id="@+id/watchlistButton6"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#d64161"
            android:onClick="showStatistics"
            android:text="Personal Statistics"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainText"
            android:drawableLeft="@drawable/stats"/>

        <Button
            android:id="@+id/watchlistButton2"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#6b5b95"
            android:onClick="showWatched"
            android:text="My Watch History"
            android:drawableLeft="@drawable/watch_history" />

        <Button
            android:id="@+id/watchlistButton5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#80ced6"
            android:text="FAVOURITE MOVIES"
            android:drawableLeft="@drawable/favorites"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>