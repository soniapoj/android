<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/year_title_photo"
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    app:layout_column="0"
                    app:layout_row="0">

                    <ImageView
                        android:id="@+id/PosterDetail"
                        android:layout_width="173dp"
                        android:layout_height="208dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        tools:srcCompat="@tools:sample/avatars" />

                    <androidx.gridlayout.widget.GridLayout
                        android:id="@+id/year_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/empty"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="TextView"
                            app:layout_column="0"
                            app:layout_row="3" />

                        <TextView
                            android:id="@+id/titleDetail"
                            android:layout_width="217dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:text="TextView"
                            android:textSize="32dp"
                            app:layout_column="0"
                            app:layout_row="1" />

                        <TextView
                            android:id="@+id/yearDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="TextView"
                            android:textSize="32dp"
                            app:layout_column="0"
                            app:layout_row="2" />
                    </androidx.gridlayout.widget.GridLayout>
                </androidx.gridlayout.widget.GridLayout>

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/the_rest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_column="0"
                    app:layout_row="1">

                    <TextView
                        android:id="@+id/genreDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="TextView"
                        android:textSize="24dp"
                        app:layout_column="0"
                        app:layout_row="0" />

                    <TextView
                        android:id="@+id/PlotDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="TextView"
                        android:textSize="24dp"
                        app:layout_column="0"
                        app:layout_row="1" />

                    <TextView
                        android:id="@+id/Actor1Detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="TextView"
                        android:textSize="24dp"
                        app:layout_column="0"
                        app:layout_row="2" />


                    <TextView
                        android:id="@+id/DirectorDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="TextView"
                        android:textSize="24dp"
                        app:layout_column="0"
                        app:layout_row="3" />

                    <!--TextView
                        android:id="@+id/ScreenwriterDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="TextView"
                        android:textSize="24dp"
                        app:layout_column="0"
                        app:layout_row="4" /-->

                    <TextView
                        android:id="@+id/RuntimeDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="TextView"
                        android:textSize="24dp"
                        app:layout_column="0"
                        app:layout_row="5" />

                    <TextView
                        android:id="@+id/RatedDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="TextView"
                        android:textSize="24dp"
                        app:layout_column="0"
                        app:layout_row="6" />

                    <TextView
                        android:id="@+id/AwardsDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="TextView"
                        android:textSize="24dp"
                        app:layout_column="0"
                        app:layout_row="7" />

                    <TextView
                        android:id="@+id/imdbRatingDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:text="TextView"
                        android:textSize="24dp"
                        app:layout_column="0"
                        app:layout_row="8" />
                </androidx.gridlayout.widget.GridLayout>
            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
